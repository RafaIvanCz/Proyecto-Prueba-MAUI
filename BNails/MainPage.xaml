<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BNails.MainPage"
             Shell.NavBarIsVisible="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout
            Spacing="25"
            MaximumWidthRequest="400"
            HorizontalOptions="Center">
            <Image
                Source="esmalte.png"
                HeightRequest="130"
                Margin="0, 70, 0, 40"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <!--<Label
                Text="B-Nails"
                Style="{StaticResource Headline}"
                FontAttributes="Bold"
                FontSize="50"
                TextColor="{StaticResource Bnails}"
                FontFamily="Comic Sans MS"
                SemanticProperties.HeadingLevel="Level1" />-->                
            <Label
                Text="Iniciar sesión"
                TextColor="DarkBlue"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Border WidthRequest="300" StrokeThickness="0">
                <Entry
                    BackgroundColor="Transparent"
                    Placeholder="Ingresa tu correo electrónico"
                    PlaceholderColor="{StaticResource Gray600}" />
            </Border>

            <Border WidthRequest="300" StrokeThickness="0">
                <Entry
                    x:Name="txtPassword"
                    Placeholder="Ingresa tu contraseña"
                    IsPassword="True"
                    PlaceholderColor="{StaticResource Gray600}"
                    />
            </Border>

            <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="End">
                <Label
                    Text="Mostrar contraseña"
                    TextColor="DarkBlue"
                    CharacterSpacing="1"
                    Margin="0, 0, 10, 0"
                    Style="{StaticResource SubHeadline}"
                    FontSize="16"
                    FontAttributes="Bold"
                    VerticalOptions="Center"/>
                
                <CheckBox
                    x:Name="ShowPasswordCheckBox"
                    CheckedChanged="OnShowPasswordCheckBox"
                    VerticalOptions="Center"/>
            </StackLayout>

            <!--<Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />-->

            <Button
                x:Name="CounterBtn"
                Text="Ingresar"
                CharacterSpacing="3"
                FontAttributes="Bold"
                BackgroundColor="DarkBlue"
                TextColor="White"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                WidthRequest="300"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                <Label
                    Text="No tenés cuenta?"
                    TextColor="DarkBlue"
                    CharacterSpacing="1"
                    Margin="0, 10, 0, 0"
                    Style="{StaticResource SubHeadline}"
                    FontSize="16"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"/>

                <Label
                    Text="Registrate"
                    TextColor="{ StaticResource DarkColorRed }"
                    CharacterSpacing="2"
                    Margin="10, 10, 0, 0"
                    Style="{StaticResource SubHeadline}"
                    FontSize="16"
                    FontAttributes="Bold"
                    HorizontalOptions="Start">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapRegistrate_Tapped" />
                    </Label.GestureRecognizers>
                </Label>

            </StackLayout>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
